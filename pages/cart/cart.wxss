/* pages/cart/cart.wxss */


.flexbox{
  width:90%;
  height: 150rpx;
  margin: auto;
  /*给当前的元素设置一个弹性容器*/
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}
.flexitem{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  font-size: 22rpx;
}
.flexitem view{
  margin-left: -20prx;
}
.flexitem image{
  width: 50rpx;
  height:50rpx;
  margin-top: 20rpx;
}
.yellow{
  background-color:#f6b059;
}
.purple{
  background-color:#8f6aff;
}
.red{
  background-color:#ec1e71;
}
.green{
  background-color:#03e391;
}
.blue{
  background-color:#1e9dff;
}
  



.list-item{
  margin: auto;
  width: 90%;
  /* margin-top: 20rpx; */
  height:130rpx;
  border-top:1rpx solid #f4f4f4;
  border-bottom:1rpx solid #f4f4f4;
  position:relative;
}
.item-btns{
  display:flex;
  justify-content: flex-end;
}
.delete-btn{
  width:136rpx;
  height:130rpx;
  background:#FF484E;
  color:#FEFEFE;
  font-size:24rpx;
  line-height:130rpx;
  text-align: center;
}
.item-cont{
  /* padding:0rpx 24rpx; */
  box-sizing: border-box;
  position:absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:100%;
  background:#FFFFFF;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.mess{
  width: 100%;
  height: 90rpx;
  margin: auto;
  /* margin-top: 60rpx; */
  position: relative;
}
.mess .big-box{
  width: 70%;
  height: 100%;
  position: relative;
}
.mess .big-box .big-box-img{
  height: 100%;
  width: 19%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mess .big-box .big-box-tit{
  position: absolute;
  width: 81%;
  height: 65%;
  right: 0;
  top: 0;
  font-size: 32rpx;
}
.mess .big-box .big-box-txt{
  position: absolute;
  width: 79%;
  height: 35%;
  right: 0;
  bottom: 0;
  font-size: 20rpx;
  color: gray;
}
.mess .big-box .big-box-img image{
  height: 80%;
  width: 80%;
}
.mess .yesterday{
  width: 30%;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  text-align: right;
  color: gray;
  font-size: 20rpx;
}

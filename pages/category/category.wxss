.scroll{
  width: 90%;
  height: 300rpx;
  margin: auto;
  /* display: flex;
  justify-content: space-between; */
  margin-top: 40rpx;
  /* background-color: grey; */
}
.scrollitem{
  margin-right: 35rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  height: 100%;
  width: 30%;
  /* background-color: hotpink; */
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.1);
  display: flex;
  display: inline-block;
  /* flex-direction: column; */
  /* justify-content: space-between;  */
  /* 垂直方向分散对齐 */
  align-items: center; /* 水平方向居中 */
}
.scrollitemBorder{
  width: 80rpx;
  height: 80rpx;
  background-color: red;
  margin: auto;
  margin-top: 30rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll .scrollitem:nth-child(4) {
  margin-right: 0rpx;
}
.scrollitemBorder image{
  height: 60%;
  width: 60%;
}
.scroll_tit{
  margin-top: 15rpx;
  width: 100%;
  text-align: center;
}
.scroll_txt{
  text-align: center;
  width: 100%;
  font-size: 20rpx;
}
.scroll_look image{
  height: 20rpx;
  width: 20rpx;
}
.scroll_look{
  margin: auto;
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between; 
  /* 水平方向两端分散对齐 */
  margin-top: 15rpx;
  padding: 0 10rpx;
  width: 25%;
  text-align: center;
  font-size: 10rpx;
  background-color:grey;
  border-radius: 25rpx;
}
.scroll_jw{
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}
.scroll_jw image{
  height: 50rpx;
  width: 50rpx;
}




